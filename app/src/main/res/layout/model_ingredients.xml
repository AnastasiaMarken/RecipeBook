<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/model_ingr"
	android:layout_marginBottom="0dp">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="10dp"
		android:layout_weight="1"
		android:src="@drawable/point"
		app:layout_constraintBottom_toBottomOf="@+id/model_ListKol"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/model_ListKol"></ImageView>

	<TextView
		android:id="@+id/model_ListIngr"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginLeft="20dp"
		android:gravity="left|center_vertical"
		android:paddingRight="30dp"
		android:textColor="@color/string_main"
		android:textSize="19dp"
		app:layout_constraintStart_toEndOf="@+id/imageView"
		app:layout_constraintTop_toTopOf="parent"></TextView>

	<TextView
		android:id="@+id/model_ListKol"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:gravity="right|center_vertical"
		android:textColor="@color/string_main"
		android:textSize="19dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/model_ListIngr"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>